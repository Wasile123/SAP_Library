<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:c="sap.ui.core" 
    xmlns:l="sap.ui.layout" 
    xmlns:f="sap.ui.layout.form"
    xmlns:ui="sap.ui" 
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
        <Dialog id="updateDialog" title="Update Book">
        
           <f:SimpleForm id="updateBookForm" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2"
			emptySpanL="0" emptySpanM="0" columnsL="1" columnsM="1" class="editableForm sapUiSizeCompact">

			<f:content>

				<Label text="ISBN"/>
				<Input id="isbn" placeholder="Enter ISBN" maxLength="10"/>

				<Label text="Author"/>
				<Input id="author" placeholder="Enter Author"/>

                <Label text="Title"/>
				<Input id="title" placeholder="Enter Title"/>


				<Label text="Publish Date"/>
				<DateTimePicker  id="pdate" displayFormat="short" valueFormat="yyyy-MM-ddTHH:mm" change="handleChange" class="sapUiSmallMarginBottom"/>

				<Label text="Language"/>
				<Input id="language" placeholder="Enter Language"/>

				<Label text="Total Number Books"/>
				<Input id="tnrbooks" placeholder="Enter Total Number of Books"/>
                
				<Label/>
				<Button text="Update Book" type="Accept" press="onUpdateBook"></Button>
				<Button text="Cancel" type="Reject" press="onCloseUpdate"></Button>

			</f:content>

		</f:SimpleForm>
        </Dialog>
</core:FragmentDefinition>